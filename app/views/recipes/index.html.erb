<div>
  <div>
    <h1>
      List of all recipes
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new recipe
    </h2>

    <form action="/insert_recipe" method="post">
      <div>
        <label for="minutes_box">
          Minutes
        </label>

        <input type="text" id="minutes_box" name="query_minutes">
      </div>

      <div>
        <label for="contributor_id_box">
          Contributor
        </label>

        <input type="text" id="contributor_id_box" name="query_contributor_id">
      </div>

      <div>
        <label for="tags_box">
          Tags
        </label>

        <input type="text" id="tags_box" name="query_tags">
      </div>

      <div>
        <label for="nutrition_box">
          Nutrition
        </label>

        <input type="text" id="nutrition_box" name="query_nutrition">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="n_steps_box">
          N steps
        </label>

        <input type="text" id="n_steps_box" name="query_n_steps">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="steps_box">
          Steps
        </label>

        <input type="text" id="steps_box" name="query_steps">
      </div>

      <div>
        <label for="ingredients_box">
          Ingredients
        </label>

        <input type="text" id="ingredients_box" name="query_ingredients">
      </div>

      <div>
        <label for="n_ingredients_box">
          N ingredients
        </label>

        <input type="text" id="n_ingredients_box" name="query_n_ingredients">
      </div>

      <button>
        Create recipe
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Minutes
        </th>

        <th>
          Contributor
        </th>

        <th>
          Tags
        </th>

        <th>
          Nutrition
        </th>

        <th>
          Name
        </th>

        <th>
          N steps
        </th>

        <th>
          Description
        </th>

        <th>
          Steps
        </th>

        <th>
          Ingredients
        </th>

        <th>
          N ingredients
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_recipes.each do |a_recipe| %>
      <tr>
        <td>
          <%= a_recipe.id %>
        </td>

        <td>
          <%= a_recipe.minutes %>
        </td>

        <td>
          <%= a_recipe.contributor_id %>
        </td>

        <td>
          <%= a_recipe.tags %>
        </td>

        <td>
          <%= a_recipe.nutrition %>
        </td>

        <td>
          <%= a_recipe.name %>
        </td>

        <td>
          <%= a_recipe.n_steps %>
        </td>

        <td>
          <%= a_recipe.description %>
        </td>

        <td>
          <%= a_recipe.steps %>
        </td>

        <td>
          <%= a_recipe.ingredients %>
        </td>

        <td>
          <%= a_recipe.n_ingredients %>
        </td>

        <td>
          <%= time_ago_in_words(a_recipe.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_recipe.updated_at) %> ago
        </td>

        <td>
          <a href="/recipes/<%= a_recipe.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
